# Database
DATABASE_URL="mysql://user:password@localhost:3306/reachstakes"

# Server
PORT=3000
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="15d"
NODE_ENV="development"

# Frontend URL (for payment redirect URLs)
FRONTEND_URL=http://localhost:5173

# ──────────────────────────────────────────────
# Tazapay Integration (REQUIRED for payments)
# ──────────────────────────────────────────────
# Get these from: https://dashboard-sandbox.tazapay.com (sandbox)
#            or:  https://dashboard.tazapay.com (production)

# API Key (starts with ak_test_ for sandbox, ak_live_ for production)
TAZAPAY_API_KEY=ak_test_XXXXXXXXXXXXXXXX

# API Secret (starts with sk_test_ for sandbox, sk_live_ for production)
TAZAPAY_API_SECRET=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Base URL — use sandbox for testing, production for live
# Sandbox: https://service-sandbox.tazapay.com
# Production: https://service.tazapay.com
TAZAPAY_API_BASE_URL=https://service-sandbox.tazapay.com

# Email of the Tazapay account owner (prevents "Parties should not be identical" error)
TAZAPAY_ACCOUNT_EMAIL=your-tazapay-email@example.com

# Webhook secret (optional) — from Tazapay dashboard for webhook signature verification
# TAZAPAY_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXX

# ──────────────────────────────────────────────
# Social Auth (optional)
# ──────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
